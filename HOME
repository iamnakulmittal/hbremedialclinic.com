   <script>
const navbar = document.getElementById("navbar");
const topHeader = document.querySelector(".top-header");
const searchButton = document.getElementById("searchButton");
const searchBox = document.getElementById("searchBox");

// Sticky Navbar and Background Logic
window.addEventListener("scroll", () => {
  const headerHeight = topHeader.offsetHeight; // Get the height of the top header
  if (window.scrollY > headerHeight) {
    navbar.classList.add("sticky"); // Add 'sticky' class for fixed position
    navbar.classList.add("active"); // Keep the background visible when sticky
  } else {
    navbar.classList.remove("sticky"); // Remove sticky behavior when at top
    navbar.classList.remove("active"); // Reset background when scrolling to the top
  }
});

// Search Box Toggle and Positioning
searchButton.addEventListener("click", () => {
  const isVisible = searchBox.style.display === "block";
  searchBox.style.display = isVisible ? "none" : "block";

  // Ensure Navbar Background Stays Visible When Search Box is Open
  if (!isVisible) {
    navbar.classList.add("active");
  } else {
    // Only remove 'active' if the user closes the search box and isn't sticky
    if (!navbar.classList.contains("sticky")) {
      navbar.classList.remove("active");
    }
  }

  // Dynamically Position Search Box Below Navbar at Right Corner
  const buttonRect = searchButton.getBoundingClientRect();
  const navbarRect = navbar.getBoundingClientRect();
  searchBox.style.top = `${navbarRect.bottom + window.scrollY}px`; // Below sticky navbar
  searchBox.style.right = `20px`; // Aligned to the right corner
});

<!-- JavaScript for Carousel and Interactions -->
   // --- Carousel Functionality ---
    const carouselSlide = document.querySelector('.carousel-slide');
    const carouselImages = document.querySelectorAll('.carousel-slide img');
    
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    
    let counter = 0;
    const size = carouselImages[0].clientWidth;
    
    nextBtn.addEventListener('click', () => {
      if(counter >= carouselImages.length - 1) return;
      carouselSlide.style.transition = "transform 0.4s ease-in-out";
      counter++;
      carouselSlide.style.transform = 'translateX(' + (-size * counter) + 'px)';
    });
    
    prevBtn.addEventListener('click', () => {
      if(counter <= 0) return;
      carouselSlide.style.transition = "transform 0.4s ease-in-out";
      counter--;
      carouselSlide.style.transform = 'translateX(' + (-size * counter) + 'px)'; 

// Auto-play Carousel
    setInterval(() => {
      if (counter < carouselImages.length - 1) {
        nextBtn.click();
      } else {
        counter = -1;
        nextBtn.click();
      }
    }, 4000);
   });
  
<!-- JavaScript for toggling FAQ answers -->
    document.addEventListener('DOMContentLoaded', function() {
      var faqQuestions = document.querySelectorAll('.faq-question');
      
      faqQuestions.forEach(function(question) {
        question.addEventListener('click', function() {
          // Toggle the active class on the faq-item
          var faqItem = this.parentElement;
          faqItem.classList.toggle('active');
          
          // Select the corresponding answer element
          var answer = faqItem.querySelector('.faq-answer');
          
          // Toggle max-height based on whether the item is active
          if (faqItem.classList.contains('active')) {
            // Set max-height to the scrollHeight value (fully shows content)
            answer.style.maxHeight = answer.scrollHeight + "px";
          } else {
            // Hide the content by setting max-height back to 0px
            answer.style.maxHeight = "0px";
          }
        });
      });
    });

  </script>
</body>
</html>
